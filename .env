# .env

# Токен вашего Telegram-бота
BOT_TOKEN=your_telegram_bot_token

# Список Telegram user IDs администраторов, разделённых запятой
BOT_ADMINS=123456789,987654321

# Настройки подключения к панели 3x-ui
XUI_HOST=https://example.com/panel/
XUI_USERNAME=your_xui_username
XUI_PASSWORD=your_xui_password
XUI_TOKEN=your_xui_token

# Идентификатор inbound (у вас только один inbound с id=1)
INBOUND_ID=9

# Пути к JSON-файлам для хранения данных
USERS_FILE=data/users.json
PROMOCODES_FILE=data/promocodes.json
REQUESTS_FILE=data/requests.json
